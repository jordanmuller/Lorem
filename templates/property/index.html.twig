{% extends 'base.html.twig' %}

{% block title %}All properties{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    {{ form_row(form.address, {id: 'search_address'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.distance) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <input type="text" placeholder="Adresse" id="search_address" class="form-control">
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container mt-4">

        <h1>See all of our properties</h1>
        <div class="row">
        {% for property in properties %}
            <div class="col-md-4">
                {% include('property/_property.html.twig') %}
            </div>
        {% endfor %}
        </div>
        
        {{ knp_pagination_render(properties) }}
        
    </div>
{% endblock %}